<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="AirTicketSalesManagement.View.Admin.AccountManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Admin"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:views="clr-namespace:AirTicketSalesManagement.View.Notification"
             xmlns:notification="clr-namespace:AirTicketSalesManagement.View.Notification"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Custom Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                                    Opacity="0.08" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Card Style -->
        <Style x:Key="SearchCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F8FAFC" Offset="0"/>
                        <GradientStop Color="#F1F5F9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" 
                                    Opacity="0.05" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Role Badge Styles -->
        <Style x:Key="RoleAdminStyle" TargetType="Border">
            <Setter Property="Background" Value="#EEF2FF"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>

        <Style x:Key="RoleManagerStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0FDF4"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>

        <Style x:Key="RoleStaffStyle" TargetType="Border">
            <Setter Property="Background" Value="#FEF3C7"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>

        <Style x:Key="RoleCustomerStyle" TargetType="Border">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DBEAFE"/>
                    <Setter Property="Foreground" Value="#1E40AF"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#BFDBFE"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Popup Styles -->
        <Style x:Key="PopupCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="0" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Styles -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

       
    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="15,15,15,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Icon:PackIconMaterial Kind="AccountCog" Width="32" Height="32" 
                                     Foreground="#6366F1" Margin="0,0,12,0"/>
                <TextBlock Text="QUẢN LÝ TÀI KHOẢN" Style="{StaticResource HeaderTextStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Search Section -->
        <Border Grid.Row="1" Style="{StaticResource SearchCardStyle}" Padding="22" Margin="15,0,15,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,18">
                    <Icon:PackIconMaterial Kind="Magnify" Width="20" Height="20" 
                                         Foreground="#64748B" Margin="0,0,8,0"/>
                    <TextBlock Text="Tìm kiếm tài khoản" FontSize="16" FontWeight="SemiBold" 
                             Foreground="#334155"/>
                </StackPanel>

                <!-- Search Fields -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Email" FontWeight="Medium" 
                                 Foreground="#374151" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtSearchEmail" 
                                 Text="{Binding SearchEmail, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Nhập email tìm kiếm..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Height="52" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="6,0,6,0">
                        <TextBlock Text="Vai trò" FontWeight="Medium" 
                                 Foreground="#374151" Margin="0,0,0,6"/>
                        <ComboBox x:Name="cboSearchRole"
                                  Text="{Binding SearchRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  materialDesign:HintAssist.Hint="Chọn vai trò"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Height="52" FontSize="14">
                            <ComboBoxItem Content="Tất cả" Tag="Tất cả"/>
                            <ComboBoxItem Content="Admin" Tag="Admin"/>
                            <ComboBoxItem Content="Nhân viên" Tag="NhanVien"/>
                            <ComboBoxItem Content="Khách hàng" Tag="KhachHang"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Search Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="12,0,0,0">
                        <Button x:Name="btnSearch" 
                                Command="{Binding SearchCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#6366F1"
                                BorderBrush="#6366F1"
                                Margin="0,0,8,0" Width="130" Height="50">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Magnify" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Tìm kiếm" FontWeight="Medium"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button x:Name="btnClearSearch"
                                Command="{Binding ClearSearchCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                BorderBrush="#E5E7EB"
                                Width="90" Height="50">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="FilterRemove" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Xóa" FontWeight="Medium"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Account DataGrid -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="15,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- DataGrid Header -->
                <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" 
                       BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="AccountGroup" Width="20" Height="20" 
                                                 Foreground="#374151" Margin="0,0,8,0"/>
                            <TextBlock Text="DANH SÁCH TÀI KHOẢN" FontWeight="Bold" 
                                     FontSize="16" Foreground="#374151"/>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#EEF2FF" CornerRadius="16" Padding="12,6">
                            <TextBlock Text="{Binding AccountCount, StringFormat='Tổng: {0} tài khoản'}"
                                     FontWeight="SemiBold" FontSize="12" Foreground="#4F46E5"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" x:Name="dgAccounts"
                          ItemsSource="{Binding Accounts}"
                          SelectedItem="{Binding SelectedAccount}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          RowHeaderWidth="0"
                          Background="Transparent"
                          BorderThickness="0"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}">

                    <DataGrid.Columns>
                        <!-- Email Column -->
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" 
                                          Width="*" MinWidth="200"
                                            >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="Foreground" Value="#1D4ED8"/>
                                    <Setter Property="Padding" Value="15,0,0,0"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Full Name Column -->
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" 
                                          Width="*" MinWidth="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                    <Setter Property="Padding" Value="15,0,0,0"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Role Column -->
                        <DataGridTemplateColumn Header="Vai trò" Width="110" MinWidth="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="16" Padding="12,6" HorizontalAlignment="Left" Margin="5,0,0,0" Width="95">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding VaiTro}" Value="Admin">
                                                        <Setter Property="Background" Value="#EEF2FF"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding VaiTro}" Value="Nhân viên">
                                                        <Setter Property="Background" Value="#F0FDF4"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding VaiTro}" Value="Khách hàng">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding VaiTro}" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding VaiTro}" Value="Admin">
                                                            <Setter Property="Foreground" Value="#4F46E5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding VaiTro}" Value="Nhân viên">
                                                            <Setter Property="Foreground" Value="#059669"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding VaiTro}" Value="Khách hàng">
                                                            <Setter Property="Foreground" Value="#D97706"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Thao tác" Width="110" MinWidth="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="Chỉnh sửa tài khoản"
                                                Command="{Binding DataContext.EditAccountCommand, 
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Width="32" Height="32" Margin="2">
                                            <Border CornerRadius="6" Background="#EEF2FF" Padding="6">
                                                <Icon:PackIconMaterial Kind="Pencil" Width="14" Height="14" 
                                                                     Foreground="#3B82F6"/>
                                            </Border>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="Xóa tài khoản"
                                                Command="{Binding DataContext.DeleteAccountCommand, 
                                                         RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Width="32" Height="32" Margin="2">
                                            <Border CornerRadius="6" Background="#FEF2F2" Padding="6">
                                                <Icon:PackIconMaterial Kind="Delete" Width="14" Height="14" 
                                                                     Foreground="#EF4444"/>
                                            </Border>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <!-- Empty State Template -->
                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Accounts.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border Background="White" CornerRadius="0,0,12,12">
                                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                               Margin="40">
                                                        <Border Background="#F3F4F6" CornerRadius="50" 
                                                               Width="50" Height="50" Margin="0,0,0,24">
                                                            <Icon:PackIconMaterial Kind="AccountGroup" 
                                                                                 Width="48" Height="48" 
                                                                                 Foreground="#9CA3AF"/>
                                                        </Border>
                                                        <TextBlock Text="Không tìm thấy tài khoản nào" 
                                                                 FontSize="20" FontWeight="SemiBold" 
                                                                 Foreground="#374151" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Thử thay đổi bộ lọc tìm kiếm hoặc thêm tài khoản mới" 
                                                                 FontSize="14" Foreground="#6B7280" 
                                                                 HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="15,15,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Role Summary -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#EEF2FF" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#4F46E5" Margin="0,0,6,0"/>
                        <TextBlock Text="Admin" FontSize="12" FontWeight="Medium" Foreground="#4F46E5"/>
                    </StackPanel>
                </Border>

                <Border Background="#F0FDF4" CornerRadius="8" Padding="12,6" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#059669" Margin="0,0,6,0"/>
                        <TextBlock Text="Nhân viên" FontSize="12" FontWeight="Medium" Foreground="#059669"/>
                    </StackPanel>
                </Border>
                <Border Background="#FEF3C7" CornerRadius="8" Padding="12,6">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#D97706" Margin="0,0,6,0"/>
                        <TextBlock Text="Khách hàng" FontSize="12" FontWeight="Medium" Foreground="#D97706"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="btnAddAccount"
                        Command="{Binding AddAccountCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#10B981"
                        BorderBrush="#10B981"
                        Width="140" Height="40" Margin="0,0,12,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="AccountPlus" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Thêm mới" FontWeight="Medium"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button x:Name="btnRefresh"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="#E5E7EB"
                        Width="120" Height="40">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Refresh" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Làm mới" FontWeight="Medium"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>


        <!-- Add Account Popup -->
        <Grid Background="#80000000" Grid.Row="0" Grid.RowSpan="4" 
              Visibility="{Binding IsAddPopupOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Style="{StaticResource PopupCardStyle}" 
                    Width="600" Height="430" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8FAFC" 
                            CornerRadius="16,16,0,0" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,0,0,1" 
                            Padding="24,20"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="#EEF2FF" CornerRadius="8" 
                                        Width="40" Height="40" Margin="0,0,12,0">
                                    <Icon:PackIconMaterial Kind="AccountPlus" 
                                                         Width="37" Height="37" 
                                                         Foreground="#3B82F6"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="THÊM TÀI KHOẢN MỚI" 
                                             FontSize="18" FontWeight="Bold" 
                                             Foreground="#1F2937"/>
                                    <TextBlock Text="Nhập thông tin tài khoản" 
                                             FontSize="13" Foreground="#6B7280"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Command="{Binding CloseAddCommand}"
                                    Width="32" Height="32">
                                <Icon:PackIconMaterial Kind="Close" Width="16" Height="16" 
                                                     Foreground="#6B7280"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                 Padding="24,20">
                        <StackPanel>
                            <TextBlock Text="Thông tin tài khoản" 
                                     Style="{StaticResource SectionHeaderStyle}"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Email -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,16">

                                    <TextBox x:Name="txtEmail"
                                             Text="{Binding AddEmail}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Height="53" FontSize="14"
                                             materialDesign:HintAssist.Hint="Email"/>
                                </StackPanel>

                                <!-- Password -->
                                <StackPanel Grid.Row="0" Grid.Column="2"
                                          Margin="0,0,0,16">

                                    <PasswordBox x:Name="txtPassword"
                                                materialDesign:PasswordBoxAssist.Password="{Binding AddPassword, Mode=TwoWay}"
                                                Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                                Height="53" FontSize="14"
                                                  materialDesign:HintAssist.Hint="Mật khẩu"/>
                                </StackPanel>

                                <!-- Họ tên (Staff/Customer only) -->
                                <StackPanel Grid.Row="1" Grid.Column="0" 
                                          Margin="0,0,0,16">

                                    <TextBox Text="{Binding AddFullName}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Height="53" FontSize="14"
                                              materialDesign:HintAssist.Hint="Họ tên"/>
                                </StackPanel>


                                <!-- Role -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,16">

                                    <ComboBox x:Name="cboRole"
                                              Text="{Binding AddRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              Height="53" FontSize="14"
                                               materialDesign:HintAssist.Hint="Vai trò">
                                        <ComboBoxItem Content="Admin"/>
                                        <ComboBoxItem Content="Nhân viên"/>
                                        <ComboBoxItem Content="Khách hàng"/>

                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Background="#F8FAFC" 
                            CornerRadius="0,0,16,16" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,1,0,0" 
                            Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="btnCancel"
                                        Command="{Binding CancelAddCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        BorderBrush="#E5E7EB"
                                        Width="100" Height="40" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="Hủy" FontWeight="Medium"/>
                                </Button>

                                <Button x:Name="btnSave"
                                        Command="{Binding SaveAddAccountCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#10B981"
                                        BorderBrush="#10B981"
                                        Width="120" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="Check" Width="16" Height="16" 
                                                             Margin="0,0,6,0"/>
                                        <TextBlock Text="Lưu" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Edit Account Popup -->
        <Grid Background="#80000000" Grid.Row="0" Grid.RowSpan="4" 
              Visibility="{Binding IsEditPopupOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Style="{StaticResource PopupCardStyle}" 
                    Width="600" Height="430" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8FAFC" 
                            CornerRadius="16,16,0,0" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,0,0,1" 
                            Padding="24,20"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="#EEF2FF" CornerRadius="8" 
                                        Width="40" Height="40" Margin="0,0,12,0">
                                    <Icon:PackIconMaterial Kind="AccountEdit" 
                                                         Width="37" Height="37" 
                                                         Foreground="#3B82F6"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="CHỈNH SỬA TÀI KHOẢN" 
                                             FontSize="18" FontWeight="Bold" 
                                             Foreground="#1F2937"/>
                                    <TextBlock Text="Cập nhật thông tin tài khoản" 
                                             FontSize="13" Foreground="#6B7280"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Command="{Binding CloseEditCommand}"
                                    Width="32" Height="32">
                                <Icon:PackIconMaterial Kind="Close" Width="16" Height="16" 
                                                     Foreground="#6B7280"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                 Padding="24,20">
                        <StackPanel>
                            <TextBlock Text="Thông tin tài khoản" 
                                     Style="{StaticResource SectionHeaderStyle}"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Email -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,16">
                                    <TextBox x:Name="txtEditEmail"
                                             Text="{Binding EditEmail}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Height="53" FontSize="14"
                                              materialDesign:HintAssist.Hint="Email"/>
                                </StackPanel>

                                <!-- Password -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                                    <PasswordBox x:Name="txtEditPassword"
                                                materialDesign:HintAssist.Hint="Nhập mật khẩu nếu muốn thay đổi"
                                                 materialDesign:PasswordBoxAssist.Password="{Binding EditPassword, Mode=TwoWay}"
                                                Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                                Height="53" FontSize="14"/>
                                </StackPanel>

                                <!-- Họ tên (Staff/Customer only) -->
                                <StackPanel Grid.Row="1" Grid.Column="0" 
                                          Margin="0,0,0,16">

                                    <TextBox Text="{Binding EditFullName}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Height="53" FontSize="14"
                                              materialDesign:HintAssist.Hint="Họ tên"/>
                                </StackPanel>


                                <!-- Role -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,16">
                                    <ComboBox x:Name="cbEditRole"
                                              Text="{Binding EditRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              Height="53" FontSize="14"
                                              materialDesign:HintAssist.Hint="Vai trò">
                                        <ComboBoxItem Content="Admin"/>
                                        <ComboBoxItem Content="Nhân viên"/>
                                        <ComboBoxItem Content="Khách hàng"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Background="#F8FAFC" 
                            CornerRadius="0,0,16,16" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,1,0,0" 
                            Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="btnCancelEdit"
                                        Command="{Binding CancelEditCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        BorderBrush="#E5E7EB"
                                        Width="100" Height="40" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="Hủy" FontWeight="Medium"/>
                                </Button>

                                <Button x:Name="btnSaveEdit"
                                        Command="{Binding SaveEditAccountCommand}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#10B981"
                                        BorderBrush="#10B981"
                                        Width="120" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="Check" Width="16" Height="16" 
                                                             Margin="0,0,6,0"/>
                                        <TextBlock Text="Lưu" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        <Popup x:Name="NotificationPopup"
           IsOpen="{Binding Notification.IsVisible}"
           Placement="Center"
           AllowsTransparency="True"
           PopupAnimation="Fade">
            <notification:NotificationControl DataContext="{Binding Notification}"/>
        </Popup>
    </Grid>
</UserControl>
