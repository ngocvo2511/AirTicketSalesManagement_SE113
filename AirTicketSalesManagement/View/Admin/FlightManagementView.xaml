                            BorderBrush="#E5E7EB"
                            Width="100" Height="40" 
                            Margin="0,0,12,0">
                                    <TextBlock Text="Hủy" FontWeight="Medium"/>
                                </Button>

                                <Button x:Name="btnSaveEdit"
                            Command="{Binding SaveEditFlightCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#10B981"
                            BorderBrush="#10B981"
                            Width="120" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="Check" Width="16" Height="16" 
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="Lưu" FontWeight="Medium"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                
            </Border>

        </Grid>
        <Popup x:Name="NotificationPopup"
           IsOpen="{Binding Notification.IsVisible}"
           Placement="Center"
           AllowsTransparency="True"
           PopupAnimation="Fade">
            <notification:NotificationControl DataContext="{Binding Notification}"/>
        </Popup>
    </Grid>
</UserControl>