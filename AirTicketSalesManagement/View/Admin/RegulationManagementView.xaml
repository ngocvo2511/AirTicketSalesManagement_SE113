<UserControl x:Class="AirTicketSalesManagement.View.Admin.RegulationManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Admin"
             mc:Ignorable="d" 
             xmlns:notification="clr-namespace:AirTicketSalesManagement.View.Notification"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6366F1"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SectionHeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#6B7280"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>

        <Style TargetType="Button" x:Key="IconButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SaveButtonStyle" BasedOn="{StaticResource IconButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DCFCE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="CancelButtonStyle" BasedOn="{StaticResource IconButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FEE2E2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="EditTextBoxStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#6366F1"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" 
                                    BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border" x:Key="InfoRowStyle">
            <Setter Property="Padding" Value="0,8"/>
            <Setter Property="BorderBrush" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="15,15,15,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Icon:PackIconMaterial Kind="FileDocumentEdit" Width="32" Height="32" 
                                     Foreground="#6366F1" Margin="0,0,12,0"/>
                <TextBlock Text="QUẢN LÝ QUY ĐỊNH" Style="{StaticResource HeaderTextStyle}"/>
            </StackPanel>

        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20" Margin="15,0,15,0">
            <StackPanel>
                <!-- Quy định Sân bay -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📍 Quy định Sân bay" Style="{StaticResource SectionHeaderStyle}"/>
                        <Border Style="{StaticResource InfoRowStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Label -->
                                <TextBlock Grid.Column="0" Text="Số lượng sân bay tối đa" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingMaxAirports, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding MaxAirports}" TextAlignment="Right"/>

                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMaxAirports, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="sân bay"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="MaxAirportsBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                 Text="{Binding EditMaxAirports, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120" 
                                 Visibility="{Binding IsEditingMaxAirports, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMaxAirports, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="sân bay"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                    Command="{Binding _EditMaxAirportsCommand}"
                                    Visibility="{Binding IsEditingMaxAirports, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                    Command="{Binding SaveMaxAirportsCommand}"
                                    Visibility="{Binding IsEditingMaxAirports, Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding ElementName=MaxAirportsBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                    Command="{Binding CancelMaxAirportsCommand}"
                                    Visibility="{Binding IsEditingMaxAirports, Converter={StaticResource BoolToVisibilityConverter}}"
                                    ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Quy định Thời gian bay -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="✈️ Quy định Thời gian bay" Style="{StaticResource SectionHeaderStyle}"/>
                        <Border Style="{StaticResource InfoRowStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Thời gian bay tối thiểu" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingMinFlightTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding MinFlightTime}" TextAlignment="Right"/>

                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMinFlightTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="phút"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="MinFlightTimeBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                 Text="{Binding EditMinFlightTime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                                 Visibility="{Binding IsEditingMinFlightTime, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMinFlightTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="phút"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                    Command="{Binding _EditMinFlightTimeCommand}"
                                    Visibility="{Binding IsEditingMinFlightTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                    Command="{Binding SaveMinFlightTimeCommand}"
                                    Visibility="{Binding IsEditingMinFlightTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding ElementName=MinFlightTimeBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                    Command="{Binding CancelMinFlightTimeCommand}"
                                    Visibility="{Binding IsEditingMinFlightTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Quy định Sân bay trung gian -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔄 Quy định Sân bay trung gian" Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Max Stopover -->
                        <Border Style="{StaticResource InfoRowStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Số sân bay trung gian tối đa" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingMaxStopover, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding MaxStopover}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMaxStopover, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="sân bay"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="MaxStopoverBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                 Text="{Binding EditMaxStopover, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                                 Visibility="{Binding IsEditingMaxStopover, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMaxStopover, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="sân bay"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                    Command="{Binding _EditMaxStopoverCommand}"
                                    Visibility="{Binding IsEditingMaxStopover, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                    Command="{Binding SaveMaxStopoverCommand}"
                                    Visibility="{Binding IsEditingMaxStopover, Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding ElementName=MaxStopoverBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                    Command="{Binding CancelMaxStopoverCommand}"
                                    Visibility="{Binding IsEditingMaxStopover, Converter={StaticResource BoolToVisibilityConverter}}"
                                    ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Min Stop Time -->
                        <Border Style="{StaticResource InfoRowStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Thời gian dừng tối thiểu" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingMinStopTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding MinStopTime}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMinStopTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="phút"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="MinStopTimeBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                 Text="{Binding EditMinStopTime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                                 Visibility="{Binding IsEditingMinStopTime, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMinStopTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="phút"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                    Command="{Binding _EditMinStopTimeCommand}"
                                    Visibility="{Binding IsEditingMinStopTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                    Command="{Binding SaveMinStopTimeCommand}"
                                    Visibility="{Binding IsEditingMinStopTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding ElementName=MinStopTimeBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                    Command="{Binding CancelMinStopTimeCommand}"
                                    Visibility="{Binding IsEditingMinStopTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Max Stop Time -->
                        <Border Style="{StaticResource InfoRowStyle}" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Thời gian dừng tối đa" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingMaxStopTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding MaxStopTime}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMaxStopTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="phút"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="MaxStopTimeBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                 Text="{Binding EditMaxStopTime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                                 Visibility="{Binding IsEditingMaxStopTime, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingMaxStopTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="phút"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                    Command="{Binding _EditMaxStopTimeCommand}"
                                    Visibility="{Binding IsEditingMaxStopTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                    Command="{Binding SaveMaxStopTimeCommand}"
                                    Visibility="{Binding IsEditingMaxStopTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding ElementName=MaxStopTimeBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                    Command="{Binding CancelMaxStopTimeCommand}"
                                    Visibility="{Binding IsEditingMaxStopTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Quy định Đặt vé -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🎫 Quy định Đặt/Hủy vé" Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Booking Time -->
                        <Border Style="{StaticResource InfoRowStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Thời gian đặt vé trước chuyến bay" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingBookingTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding BookingTime}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingBookingTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="ngày"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="BookingTimeBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                 Text="{Binding EditBookingTime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                                 Visibility="{Binding IsEditingBookingTime, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingBookingTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="ngày"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                    Command="{Binding _EditBookingTimeCommand}"
                                    Visibility="{Binding IsEditingBookingTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                    Command="{Binding SaveBookingTimeCommand}"
                                    Visibility="{Binding IsEditingBookingTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding ElementName=BookingTimeBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                    Command="{Binding CancelBookingTimeCommand}"
                                    Visibility="{Binding IsEditingBookingTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Cancel Time -->
                        <Border Style="{StaticResource InfoRowStyle}" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Thời gian hủy vé trước chuyến bay" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingCancelTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding CancelTime}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingCancelTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="ngày"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="CancelTimeBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                 Text="{Binding EditCancelTime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                                 Visibility="{Binding IsEditingCancelTime, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingCancelTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="ngày"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                    Command="{Binding _EditCancelTimeCommand}"
                                    Visibility="{Binding IsEditingCancelTime, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                    Command="{Binding SaveCancelTimeCommand}"
                                    Visibility="{Binding IsEditingCancelTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding ElementName=CancelTimeBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                    Command="{Binding CancelCancelTimeCommand}"
                                    Visibility="{Binding IsEditingCancelTime, Converter={StaticResource BoolToVisibilityConverter}}"
                                    ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
                <!-- Quy định Số hạng vé -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🏷️ Quy định hạng vé" Style="{StaticResource SectionHeaderStyle}"/>
                        <Border Style="{StaticResource InfoRowStyle}" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Số lượng hạng vé" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180"/>

                                <!-- Display Mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                                   Visibility="{Binding IsEditingTicketClassCount, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="{Binding TicketClassCount}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingTicketClassCount, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Text="hạng"/>

                                <!-- Edit Mode -->
                                <TextBox x:Name="TicketClassCountBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                                   Text="{Binding EditTicketClassCount, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                                   Visibility="{Binding IsEditingTicketClassCount, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                                   Visibility="{Binding IsEditingTicketClassCount, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="hạng"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                                        Command="{Binding _EditTicketClassCountCommand}"
                                        Visibility="{Binding IsEditingTicketClassCount, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                        ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                                        Command="{Binding SaveTicketClassCountCommand}"
                                        Visibility="{Binding IsEditingTicketClassCount, Converter={StaticResource BoolToVisibilityConverter}}"
                                        IsEnabled="{Binding ElementName=TicketClassCountBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                                        ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                                        Command="{Binding CancelTicketClassCountCommand}"
                                        Visibility="{Binding IsEditingTicketClassCount, Converter={StaticResource BoolToVisibilityConverter}}"
                                        ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}">
                    <!-- Quy định độ tuổi -->
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="👶 Quy định độ tuổi hành khách" Style="{StaticResource SectionHeaderStyle}" />

                        <!-- Độ tuổi tối đa sơ sinh -->
                        <Border Style="{StaticResource InfoRowStyle}" BorderThickness="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Tuổi của trẻ sơ sinh dưới" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180" />

                                <!-- View mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                       Visibility="{Binding IsEditingInfantAge, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                       Text="{Binding InfantAge}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                       Visibility="{Binding IsEditingInfantAge, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                       Text="tuổi"/>

                                <!-- Edit mode -->
                                <TextBox x:Name="InfantAgeBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                     Text="{Binding EditInfantAge, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                     Visibility="{Binding IsEditingInfantAge, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                       Visibility="{Binding IsEditingInfantAge, Converter={StaticResource BoolToVisibilityConverter}}"
                       Text="tuổi"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                        Command="{Binding _EditInfantAgeCommand}"
                        Visibility="{Binding IsEditingInfantAge, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                        Command="{Binding SaveInfantAgeCommand}"
                        Visibility="{Binding IsEditingInfantAge, Converter={StaticResource BoolToVisibilityConverter}}"
                        IsEnabled="{Binding ElementName=InfantAgeBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                        ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                        Command="{Binding CancelInfantAgeCommand}"
                        Visibility="{Binding IsEditingInfantAge, Converter={StaticResource BoolToVisibilityConverter}}"
                        ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Độ tuổi tối đa trẻ em -->
                        <Border Style="{StaticResource InfoRowStyle}" BorderThickness="0" Margin="0,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Tuổi của trẻ em dưới" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" MinWidth="180" />

                                <!-- View mode -->
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueStyle}" VerticalAlignment="Center"
                       Visibility="{Binding IsEditingChildAge, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                       Text="{Binding ChildAge}" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                       Visibility="{Binding IsEditingChildAge, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                       Text="tuổi"/>

                                <!-- Edit mode -->
                                <TextBox x:Name="ChildAgeBox" Grid.Column="1" Style="{StaticResource EditTextBoxStyle}" 
                     Text="{Binding EditChildAge, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="120"
                     Visibility="{Binding IsEditingChildAge, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource ValueStyle}" VerticalAlignment="Center" Margin="5,0,0,0"
                       Visibility="{Binding IsEditingChildAge, Converter={StaticResource BoolToVisibilityConverter}}"
                       Text="tuổi"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource IconButtonStyle}" 
                        Command="{Binding _EditChildAgeCommand}"
                        Visibility="{Binding IsEditingChildAge, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        ToolTip="Chỉnh sửa">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                    </Button>
                                    <Button Style="{StaticResource SaveButtonStyle}" 
                        Command="{Binding SaveChildAgeCommand}"
                        Visibility="{Binding IsEditingChildAge, Converter={StaticResource BoolToVisibilityConverter}}"
                        IsEnabled="{Binding ElementName=ChildAgeBox, Path=(Validation.HasError), Converter={StaticResource InverseBooleanConverter}}"
                        ToolTip="Lưu">
                                        <TextBlock Text="✅" FontSize="12" Foreground="#10B981"/>
                                    </Button>
                                    <Button Style="{StaticResource CancelButtonStyle}" 
                        Command="{Binding CancelChildAgeCommand}"
                        Visibility="{Binding IsEditingChildAge, Converter={StaticResource BoolToVisibilityConverter}}"
                        ToolTip="Hủy">
                                        <TextBlock Text="❌" FontSize="12" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <Popup x:Name="NotificationPopup"
           IsOpen="{Binding Notification.IsVisible}"
           Placement="Center"
           AllowsTransparency="True"
           PopupAnimation="Fade">
            <notification:NotificationControl DataContext="{Binding Notification}"/>
        </Popup>
    </Grid>
</UserControl>