<!-- XAML File Update -->
<UserControl x:Class="AirTicketSalesManagement.View.Customer.FlightScheduleSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirTicketSalesManagement.View.Customer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="980"
                         xmlns:behaviors="clr-namespace:AirTicketSalesManagement.Behaviors">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel tìm kiếm -->
        <Border Grid.Row="0" Background="#F5F7FA" CornerRadius="10" Padding="23" Margin="15 15 15 20">
            <StackPanel>
                <!-- Header với nút thu nhỏ/mở rộng -->
                <Grid Margin="0,0,0,17">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="Nhập thông tin chuyến bay cần tìm" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Foreground="#2C3E50"/>
                    </StackPanel>

                    <Button x:Name="btnToggleFlightSearch"
                Command="{Binding ToggleSearchCommand}"
                Style="{StaticResource MaterialDesignIconButton}"
                HorizontalAlignment="Right"
                Width="32" Height="32"
                Padding="0"
                ToolTip="{Binding IsSearchExpanded, Converter={StaticResource BoolToTooltipConverter}}">
                        <Icon:PackIconMaterial 
                    Kind="{Binding IsSearchExpanded, Converter={StaticResource BoolToIconConverter}}"
                    Width="18" Height="18" 
                    Foreground="#64748B"/>
                    </Button>
                </Grid>

                <!-- Nội dung form với hiệu ứng thu nhỏ -->
                <Grid x:Name="FlightSearchContent" ClipToBounds="True">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="MaxHeight" Value="1000"/>
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSearchExpanded}" Value="False">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                            Storyboard.TargetProperty="MaxHeight"
                                            To="0" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation
                                            Storyboard.TargetProperty="Opacity"
                                            To="0" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <BooleanAnimationUsingKeyFrames
                                            Storyboard.TargetProperty="IsHitTestVisible">
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0.3" Value="False"/>
                                                </BooleanAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                            Storyboard.TargetProperty="MaxHeight"
                                            To="1000" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation
                                            Storyboard.TargetProperty="Opacity"
                                            To="1" Duration="0:0:0.3" BeginTime="0:0:0.1">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <BooleanAnimationUsingKeyFrames
                                            Storyboard.TargetProperty="IsHitTestVisible">
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                                </BooleanAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <!-- Container chính cho form -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Hàng 1: Điểm khởi hành và Điểm đến -->
                        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,15,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="FlightTakeoff" 
                                         Grid.Column="0"
                                         Foreground="#6366F1"
                                         Width="30" Height="30" 
                                         VerticalAlignment="Bottom" 
                                         Margin="0,0,15,5"/>

                            <ComboBox Grid.Column="1"
                          materialDesign:HintAssist.Hint="Điểm khởi hành"
                          IsEditable="True"
                          Height="45"
                              Width="320"
                          FontSize="17"
                              HorizontalAlignment="Left"
                          ItemsSource="{Binding DiemDiList}"
                          Text="{Binding DiemDi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="0" Margin="15,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="FlightLand" 
                                         Grid.Column="0"
                                         Foreground="#6366F1"
                                         Width="30" Height="30" 
                                         VerticalAlignment="Bottom" 
                                         Margin="0,0,15,5"/>

                            <ComboBox Grid.Column="1"
                          materialDesign:HintAssist.Hint="Điểm đến"
                          IsEditable="True"
                          Height="45"
                              Width="320"
                              HorizontalAlignment="Left"
                          FontSize="17"
                          ItemsSource="{Binding DiemDenList}"
                          Text="{Binding DiemDen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                        </Grid>

                        <!-- Hàng 2: Ngày khởi hành và Số lượng hành khách -->
                        <Grid Grid.Column="1" Grid.Row="1" Margin="15,0,0,15" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="CalendarMonth" 
                                         Grid.Column="0"
                                         Foreground="#6366F1"
                                         Width="30" Height="30" 
                                         VerticalAlignment="Bottom" 
                                         Margin="0,0,15,5"/>

                            <DatePicker Grid.Column="1"
                            DisplayDateStart="{Binding MinBookingDate}"            
                            Height="45"
                                Width="320"
                                HorizontalAlignment="Left"
                            FontSize="17"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Ngày đi"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            SelectedDate="{Binding NgayDi, Mode=TwoWay}"
                            behaviors:DatePickerBehaviors.IsTextInputDisabled="True"/>
                            
                        </Grid>

                        <Grid Grid.Column="0" Grid.Row="1" Margin="0,0,15,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="AccountGroup" 
                                         Grid.Column="0"
                                         Foreground="#6366F1"
                                         Width="30" Height="30" 
                                         VerticalAlignment="Bottom" 
                                         Margin="0,0,15,5"/>

                            <TextBox Grid.Column="1"
                             x:Name="PassengerNumber"
                         materialDesign:HintAssist.Hint="Số lượng hành khách"
                         Height="45"
                             Width="320"
                             HorizontalAlignment="Left"
                         FontSize="17"
                         IsReadOnly="True"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding PassengerSummary}"
                         VerticalAlignment="Center"/>

                            <Button Grid.Column="2" 
                        x:Name="PassengerSelectorButton"
                        Style="{StaticResource MaterialDesignFlatLightButton}"
                        Width="45" Height="45"
                        Padding="0"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Command="{Binding OpenPassengerSelectorCommand}">
                                <materialDesign:PackIcon Kind="MenuDown" Width="25" Height="25"/>
                            </Button>
                        </Grid>

                        <!-- Hàng 3: Button tìm kiếm (căn giữa, span 2 cột) -->
                        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#6366F1"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Height="55"
                    Width="230"
                    FontSize="17"
                    FontWeight="SemiBold"
                    Content="TÌM CHUYẾN BAY"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Command="{Binding SearchFlightCommand}"
                    Margin="520,10,0,0">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3" Color="#6366F1"/>
                            </Button.Effect>
                        </Button>
                    </Grid>

                    <!-- Popup để chọn số lượng hành khách -->
                    <Popup x:Name="PassengerSelectorPopup" 
               IsOpen="{Binding IsPassengerSelectorOpen, Mode=TwoWay}"
               StaysOpen="False"
               PlacementTarget="{Binding ElementName=PassengerNumber}"
               Placement="Bottom" 
               Width="400"
               AllowsTransparency="True">
                        <Border Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="10"
                    Padding="25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                            </Border.Effect>

                            <StackPanel>
                                <TextBlock Text="Chọn số lượng hành khách" 
                               FontWeight="SemiBold"
                               FontSize="18"
                               Margin="0,0,0,20"
                               Foreground="#2C3E50"/>

                                <!-- Người lớn -->
                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" 
                                   Text="Người lớn" 
                                   FontSize="15"
                                   FontWeight="Medium"
                                   Foreground="#2C3E50"/>
                                    <TextBlock Grid.Column="0" Grid.Row="1" 
                                    Text="{Binding TuoiToiDaTreEm, StringFormat='Từ {0} tuổi trở lên'}"
                                   Foreground="#7F8C8D"
                                   FontSize="13"
                                   Margin="0,2,0,0"/>

                                    <StackPanel Grid.Column="1" Grid.RowSpan="2" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Width="45" Height="45"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    Command="{Binding DecreaseAdultCommand}">
                                            <materialDesign:PackIcon Kind="Minus" Foreground="#7F8C8D" Width="20" Height="20"/>
                                        </Button>

                                        <TextBlock Text="{Binding AdultCount, Mode=TwoWay}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="18"
                                       Width="50"
                                       TextAlignment="Center"
                                       Margin="15,0"
                                       Foreground="#2C3E50"/>

                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Width="45" Height="45"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    Command="{Binding IncreaseAdultCommand}">
                                            <materialDesign:PackIcon Kind="Plus" Foreground="#6366F1" Width="20" Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Trẻ em (2-12 tuổi) -->
                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" 
                                   Text="Trẻ em" 
                                   FontSize="15"
                                   FontWeight="Medium"
                                   Foreground="#2C3E50"/>
                                    <TextBlock Grid.Column="0" Grid.Row="1" 
                                   Text="{Binding DoTuoiTreEmText}" 
                                   Foreground="#7F8C8D"
                                   FontSize="13"
                                   Margin="0,2,0,0"/>

                                    <StackPanel Grid.Column="1" Grid.RowSpan="2" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Width="45" Height="45"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    Command="{Binding DecreaseChildCommand}">
                                            <materialDesign:PackIcon Kind="Minus" Foreground="#7F8C8D" Width="20" Height="20"/>
                                        </Button>

                                        <TextBlock Text="{Binding ChildCount}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="18"
                                       Width="50"
                                       TextAlignment="Center"
                                       Margin="15,0"
                                       Foreground="#2C3E50"/>

                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Width="45" Height="45"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    Command="{Binding IncreaseChildCommand}">
                                            <materialDesign:PackIcon Kind="Plus" Foreground="#6366F1" Width="20" Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Trẻ sơ sinh (dưới 2 tuổi) -->
                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" 
                                   Text="Trẻ sơ sinh" 
                                   FontSize="15"
                                   FontWeight="Medium"
                                   Foreground="#2C3E50"/>
                                    <TextBlock Grid.Column="0" Grid.Row="1" 
                                    Text="{Binding TuoiToiDaSoSinh, StringFormat='Dưới {0} tuổi'}"
                                   Foreground="#7F8C8D"
                                   FontSize="13"
                                   Margin="0,2,0,0"/>

                                    <StackPanel Grid.Column="1" Grid.RowSpan="2" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Width="45" Height="45"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    Command="{Binding DecreaseInfantCommand}">
                                            <materialDesign:PackIcon Kind="Minus" Foreground="#7F8C8D" Width="20" Height="20"/>
                                        </Button>

                                        <TextBlock Text="{Binding InfantCount}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       FontWeight="SemiBold"
                                       FontSize="18"
                                       Width="50"
                                       TextAlignment="Center"
                                       Margin="15,0"
                                       Foreground="#2C3E50"/>

                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Width="45" Height="45"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    Command="{Binding IncreaseInfantCommand}">
                                            <materialDesign:PackIcon Kind="Plus" Foreground="#6366F1" Width="20" Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Nút Áp dụng -->
                                <Button Content="ÁP DỤNG" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#6366F1"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Height="50"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Command="{Binding ApplyPassengerSelectionCommand}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.3" Color="#6366F1"/>
                                    </Button.Effect>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Phần hiển thị kết quả -->
        <!-- Phần hiển thị kết quả -->
        <Border Grid.Row="1" Background="#F5F7FA" CornerRadius="10" Padding="20" HorizontalAlignment="Stretch" Margin="15,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề kết quả tìm kiếm -->
                <TextBlock Grid.Row="0" 
                   Text="Kết quả tìm kiếm" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="8,0,0,15"
                   Foreground="#333333"/>

                <!-- Đề xuất phần hiển thị danh sách chuyến bay -->
                <ListView Grid.Row="1" 
                  x:Name="FlightResultsListView" 
                  ItemsSource="{Binding FlightResults}"
                  Visibility="{Binding ResultVisibility}"
                  HorizontalContentAlignment="Stretch"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" Margin="0,8" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Flight Info Section -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Logo hãng bay -->
                                        <Image Grid.Column="0" Width="70" Height="70" Margin="0,0,15,0" Source="{Binding LogoUrl}" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" UseLayoutRounding="True"/>

                                        <!-- Thông tin chuyến bay -->
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding MaSBDi}" FontWeight="Bold" FontSize="17"/>
                                                <materialDesign:PackIcon Kind="ArrowRight" Margin="10,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding MaSBDen}" FontWeight="Bold" FontSize="17"/>
                                                <TextBlock Text=" | " Margin="5,0" FontSize="17"/>
                                                <TextBlock Text="{Binding HangHangKhong}" FontSize="16"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                                                <TextBlock Text="{Binding GioDi, StringFormat=hh\\:mm}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text=" - " Margin="5,0" FontSize="14"/>
                                                <TextBlock Text="{Binding GioDen, StringFormat=hh\\:mm}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text=" | " Margin="5,0" FontSize="14"/>
                                                <TextBlock Text="{Binding ThoiGianBay, StringFormat=hh\\:mm}" Foreground="#666666" FontSize="14"/>
                                                <TextBlock Text=" | " Margin="5,0" FontSize="14"/>

                                                <!-- Hiển thị loại chuyến bay (thẳng hoặc có điểm dừng) -->
                                                <Grid>
                                                    <TextBlock Text="Bay thẳng" 
                                Foreground="#29A329" 
                                Visibility="{Binding SoSanBayTrungGian, Converter={StaticResource ZeroToVisibleConverter}}"/>
                                                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding SoSanBayTrungGian, Converter={StaticResource NonZeroToVisibleConverter}}">
                                                        <TextBlock Text="{Binding SoSanBayTrungGian}" Foreground="#FF6600" FontSize="14"/>
                                                        <TextBlock Text=" điểm dừng" Foreground="#FF6600" Margin="3,0,0,0" FontSize="14"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                                <materialDesign:PackIcon Kind="Airplane" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding MayBay}" Foreground="#666666" FontSize="14"/>
                                                <TextBlock Text=" | " Margin="5,0" FontSize="14"/>
                                                <materialDesign:PackIcon Kind="SeatPassenger" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="15kg hành lý" Foreground="#666666" FontSize="14"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Giá cơ bản -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="Giá từ:" FontSize="14" Foreground="#666666" HorizontalAlignment="Right" />
                                            <TextBlock Text="{Binding GiaVe, StringFormat={}{0:N0} VND}" 
                              FontWeight="Bold" FontSize="18" 
                              Foreground="#FF6600" HorizontalAlignment="Right"/>
                                            <TextBlock Text="/khách" Foreground="#666666" HorizontalAlignment="Right" FontSize="14"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Ticket Classes Section -->
                                    <Grid Grid.Row="1" Margin="0,5,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Toggle Button to Show/Hide Ticket Classes -->
                                        <Button Grid.Row="0" 
                                            Content="XEM CÁC HẠNG VÉ" 
                                            Command="{Binding DataContext.ToggleTicketClassesCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Foreground="#6366F1"
                                            FontWeight="Medium"
                                            HorizontalAlignment="Center"/>  

                                        <!-- Ticket Classes Container - Shown only when expanded -->
                                        <ScrollViewer Grid.Row="1" 
                                           HorizontalScrollBarVisibility="Auto" 
                                           VerticalScrollBarVisibility="Disabled"
                                           Visibility="{Binding IsTicketClassesExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Margin="0,10,0,0">   
                                            <ItemsControl ItemsSource="{Binding TicketClasses}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Width="180" Height="140" 
                                                            Background="{Binding BackgroundColor}" 
                                                            CornerRadius="8" 
                                                            Margin="5,0">
                                                            <Grid Margin="12">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- Tên hạng vé -->
                                                                <TextBlock Grid.Row="0"                    
                                                                           Text="{Binding TenHangVe}"                    
                                                                           FontWeight="Bold"                    
                                                                           FontSize="15"                  
                                                                           Margin="0,0,0,5"                     
                                                                           Foreground="{Binding HeaderColor}"/>

                                                                <!-- Số ghế còn lại -->
                                                                <Border Grid.Row="1"                     
                                                                        Background="#80000000"            
                                                                        CornerRadius="4"            
                                                                        Padding="6,3"               
                                                                        HorizontalAlignment="Left">
                                                                    <TextBlock Text="{Binding SoGheConLai, StringFormat={}{0} ghế còn lại}"                        
                                                                               FontSize="12"                         
                                                                               Foreground="White"/>
                                                                </Border>

                                                                <!-- Giá vé -->
                                                                <StackPanel Grid.Row="2" VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding GiaVe, StringFormat={}{0:N0} VND}"                           
                                                                               FontWeight="Bold"                         
                                                                               FontSize="16"                        
                                                                               Margin="0,0,0,3"/>
                                                                </StackPanel>

                                                                <!-- Nút chọn -->
                                                                <Button Grid.Row="3"                
                                                                        Content="CHỌN"                 
                                                                        Command="{Binding DataContext.SelectTicketClassCommand, RelativeSource={RelativeSource AncestorType=ListView}}"                
                                                                        Style="{StaticResource MaterialDesignRaisedButton}"                   
                                                                        Background="White"                   
                                                                        Foreground="{Binding ButtonColor}"                   
                                                                        Height="30"                 
                                                                        FontSize="12"                 
                                                                        FontWeight="Medium"                 
                                                                        materialDesign:ButtonAssist.CornerRadius="5"                 
                                                                        HorizontalAlignment="Stretch"                  
                                                                        VerticalAlignment="Bottom">
                                                                    <Button.CommandParameter>
                                                                        <MultiBinding Converter="{StaticResource TicketSelectionConverter}">
                                                                            <!-- HangVe (hạng vé) từ chính item hiện tại -->
                                                                            <Binding/>
                                                                            <!-- Chuyến bay từ ListViewItem cha -->
                                                                            <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=ListViewItem}"/>
                                                                            <!-- 3. Số người lớn -->
                                                                            <Binding Path="DataContext.SearchedAdultCount" RelativeSource="{RelativeSource AncestorType=ListView}"/>
                                                                            <!-- 4. Số trẻ em -->
                                                                            <Binding Path="DataContext.SearchedChildCount" RelativeSource="{RelativeSource AncestorType=ListView}"/>
                                                                            <!-- 5. Số em bé -->
                                                                            <Binding Path="DataContext.SearchedInfantCount" RelativeSource="{RelativeSource AncestorType=ListView}"/>
                                                                        </MultiBinding>
                                                                    </Button.CommandParameter>
                                                                </Button>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Nội dung hiển thị khi chưa có kết quả tìm kiếm -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding HasSearched, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="AirplaneTakeoff" Width="80" Height="80" Foreground="#C0C0C0" HorizontalAlignment="Center"/>
                    <TextBlock Text="Hãy tìm kiếm chuyến bay phù hợp với bạn" 
                       FontSize="18" 
                       Foreground="#999999" 
                       HorizontalAlignment="Center" 
                       Margin="0,15,0,5"/>
                    <TextBlock Text="Nhập thông tin chuyến bay bạn muốn tìm kiếm ở phía trên" 
                       FontSize="14" 
                       Foreground="#AAAAAA" 
                       HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Nội dung hiển thị khi tìm kiếm nhưng không có kết quả -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel.Visibility>
                        <MultiBinding Converter="{StaticResource SearchedAndZeroToVisibleConverter}">
                            <Binding Path="HasSearched"/>
                            <Binding Path="FlightResults.Count"/>
                        </MultiBinding>
                    </StackPanel.Visibility>
                    <materialDesign:PackIcon Kind="AirplaneOff" Width="80" Height="80" Foreground="#FF6B6B" HorizontalAlignment="Center"/>
                    <TextBlock Text="Không tìm thấy chuyến bay phù hợp" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Foreground="#FF6B6B" 
                       HorizontalAlignment="Center" 
                       Margin="0,15,0,5"/>
                    <TextBlock Text="Vui lòng thử lại với thông tin khác hoặc chọn ngày khác" 
                       FontSize="14" 
                       Foreground="#666666" 
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       MaxWidth="400"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>